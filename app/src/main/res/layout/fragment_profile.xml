<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".home.Fragments.ProfileFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="18sp"

                />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="14dp"
        android:paddingBottom="@dimen/normal_spacing">

        <TextView
            android:id="@+id/wishListTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_spacing"

            android:background="@drawable/box_shape_selected"
            android:backgroundTint="@color/primaryColorLight"
            android:drawableTop="@drawable/ic_heart"
            android:drawableTint="@color/primaryColorDart"
            android:padding="@dimen/normal_spacing"
            android:text="Wish List"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ordersTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_spacing"

            android:layout_marginRight="@dimen/normal_spacing"
            android:background="@drawable/box_shape_selected"
            android:backgroundTint="@color/primaryColorLight"
            android:drawableTop="@drawable/ic_baseline_local_shipping_24"
            android:drawableTint="@color/primaryColorDart"
            android:padding="@dimen/normal_spacing"
            android:text="My Orders"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/addressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normal_spacing"
            android:background="@drawable/box_shape_selected"
            android:backgroundTint="@color/primaryColorLight"
            android:drawableTop="@drawable/ic_baseline_location_on_24"
            android:drawableTint="@color/primaryColorDart"
            android:padding="@dimen/normal_spacing"
            android:text="Addresses"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>





    <TextView
        android:id="@+id/adminAreaTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_spacing"
        android:background="@drawable/box_shape_selected"
        android:backgroundTint="#F1EEEE"
        android:drawableRight="@drawable/ic_baseline_admin_panel_settings_24"
        android:drawableTint="@color/primaryColor"
        android:padding="@dimen/normal_spacing"
        android:text="Admin Area"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setprofile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"

            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:padding="5dp"
                android:id="@+id/setname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abishan Chemjong"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:padding="5dp"
                android:id="@+id/setemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abishan@gmail.com"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:padding="5dp"
                android:id="@+id/setcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9817100019"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_centerInParent="true">
        <androidx.cardview.widget.CardView
            android:id="@+id/aboutCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" About Us"
                        android:textColor="@color/black"
                        android:textSize="18sp"

                        />

                    <TextView
                        android:id="@+id/downArrow"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_arrow_down"
                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/upArrow"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_arrow_up"
                        />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Profile settings"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/ic_edit"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_arrow_forward"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/logOutTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_spacing"
            android:layout_marginTop="@dimen/normal_spacing"
            android:layout_marginRight="@dimen/normal_spacing"
            android:background="@drawable/box_shape_selected"
            android:backgroundTint="#F1EEEE"
            android:drawableRight="@drawable/ic_baseline_login_24"
            android:drawableTint="@color/primaryColor"
            android:padding="@dimen/normal_spacing"
            android:text="Log Out"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>